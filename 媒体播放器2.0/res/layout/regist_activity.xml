<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegistActivity" >

    <RelativeLayout
        android:id="@+id/regist_line_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/regist_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="×"
            android:textColor="#eee"
            android:textSize="40sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="注册"
            android:textColor="#eee"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/regist_line_tow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_line_one"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:background="@color/main_color" 
        android:paddingBottom="2dp"
        >

        <TextView
            android:id="@+id/regist_tv_username"
            style="@style/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="用户名" />

        <EditText
            android:id="@+id/regist_ed_username"
            style="@style/regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regist_tv_username"
            android:layout_alignTop="@+id/regist_tv_username"
            android:layout_toRightOf="@+id/regist_tv_username"
            android:hint="请输入您的用户名"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/regist_tv_password"
            style="@style/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/regist_tv_username"
            android:layout_below="@+id/regist_tv_username"
            android:layout_marginBottom="2dp"
            android:text="密　码" />

        <EditText
            android:id="@+id/regist_ed_password"
            style="@style/regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regist_tv_password"
            android:layout_alignTop="@+id/regist_tv_password"
            android:layout_toRightOf="@+id/regist_tv_password"
            android:hint="请输入您的密码"
            android:inputType="textPassword"
            android:singleLine="true" /> 

        <TextView
            android:id="@+id/regist_tv_repassword"
            style="@style/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/regist_tv_password"
            android:text="　　　" />

        <EditText
            android:id="@+id/regist_ed_repassword"
            style="@style/regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regist_tv_repassword"
            android:layout_alignTop="@+id/regist_tv_repassword"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@+id/regist_tv_repassword"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:singleLine="true" />

        <TextView
            android:id="@+id/regist_tv_name"
            style="@style/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/regist_tv_username"
            android:layout_below="@+id/regist_tv_repassword"
            android:layout_marginBottom="2dp"
            android:text="昵　称" />

        <EditText
            android:id="@+id/regist_ed_name"
            style="@style/regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regist_tv_name"
            android:layout_alignTop="@+id/regist_tv_name"
            android:layout_toRightOf="@+id/regist_tv_name"
            android:hint="请输入您的昵称" 
            android:singleLine="true" 
            />

        <TextView
            android:id="@+id/regist_tv_email"
            style="@style/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/regist_tv_username"
            android:layout_below="@+id/regist_tv_name"
            android:text="邮　箱" />

        <EditText
            android:id="@+id/regist_ed_email"
            style="@style/regist_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/regist_tv_email"
            android:layout_alignTop="@+id/regist_tv_email"
            android:layout_toRightOf="@+id/regist_tv_email"
            android:hint="请输入您的邮箱"
             android:inputType="textEmailAddress"
            android:singleLine="true" 
            
             />
    </RelativeLayout>

    <Button
        android:id="@+id/regist_bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_line_tow"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_color"
        android:text="注　　册"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>