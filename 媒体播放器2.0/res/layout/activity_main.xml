<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuFram" >

    <android.support.v4.view.ViewPager
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_above="@+id/radio"
        android:layout_alignParentTop="true"
        android:paddingTop="1dp" >
    </android.support.v4.view.ViewPager>
	
    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/main_color"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        >

        <RadioButton
            android:id="@+id/rd_music"
            style="@style/ButtonMenu"
            android:checked="true"
            android:drawableTop="@drawable/music_select"
            android:text="音乐" 
            
            />

        <RadioButton
            android:id="@+id/rd_video"
            style="@style/ButtonMenu"
            android:drawableTop="@drawable/video_select"
            android:text="视频" />

        <RadioButton
            android:id="@+id/rd_picture"
            style="@style/ButtonMenu"
            android:drawableTop="@drawable/picture_select"
            android:text="图片" />

        <RadioButton
            android:id="@+id/rd_mine"
            style="@style/ButtonMenu"
            android:drawableTop="@drawable/mine_select"
            android:text="个人中心" />
    </RadioGroup>

</RelativeLayout>